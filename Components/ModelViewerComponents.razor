@if (Model is not null && IsVisible)
{
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/60 backdrop-blur-md z-50 flex items-center justify-center p-2 sm:p-4"
         @onclick="ClosePopup">
        
        <!-- Popup Content -->
        <div class="relative w-full max-w-7xl h-[95vh] bg-white rounded-3xl shadow-2xl overflow-hidden transform transition-all duration-300 scale-100 opacity-100 flex flex-col"
             @onclick:stopPropagation="true">
            
            <!-- Header - Fixed at top -->
            <div class="bg-gradient-to-r from-slate-900 via-blue-900 to-indigo-900 text-white px-4 sm:px-6 lg:px-8 py-4 sm:py-6 flex-shrink-0">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-r from-blue-500 to-purple-500 rounded-2xl flex items-center justify-center shadow-lg">
                            <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold">@Model.AltText</h2>
                            <p class="text-blue-100 text-sm sm:text-base">3D Model Viewer</p>
                        </div>
                    </div>
                    
                    <!-- Close Button -->
                    <button @onclick="ClosePopup" 
                            class="p-2 sm:p-3 bg-white/20 hover:bg-white/30 rounded-xl transition-all duration-200 hover:scale-110 group">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white group-hover:text-red-200 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            <!-- Scrollable Body -->
            <div class="flex-1 overflow-y-auto bg-gradient-to-br from-slate-50 to-blue-50">
                <div class="p-4 sm:p-6 lg:p-8">
                    <!-- 3D Model Viewer Section -->
                    <div class="mb-6 sm:mb-8">
                        <div class="bg-white rounded-3xl shadow-lg border border-slate-200 overflow-hidden">
                            <ThreeDModelViewer Model="Model" Options="Options"></ThreeDModelViewer>
                        </div>
                    </div>
                    
                    <!-- Model Information Section -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6 sm:mb-8">
                        <!-- Model Details -->
                        <div class="lg:col-span-2 bg-white rounded-3xl shadow-lg p-4 sm:p-6 border border-slate-200">
                            <h3 class="text-lg sm:text-xl font-bold text-slate-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Model Information
                            </h3>
                            <div class="space-y-3">
                                <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl">
                                    <span class="text-sm font-medium text-slate-600">Name:</span>
                                    <span class="text-sm font-semibold text-slate-900">@Model.AltText</span>
                                </div>
                                <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl">
                                    <span class="text-sm font-medium text-slate-600">Source:</span>
                                    <span class="text-sm font-semibold text-slate-900 truncate max-w-48">@Model.Source</span>
                                </div>
                                <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl">
                                    <span class="text-sm font-medium text-slate-600">Poster:</span>
                                    <span class="text-sm font-semibold text-slate-900 truncate max-w-48">@Model.Poster</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Quick Actions -->
                        <div class="bg-white rounded-3xl shadow-lg p-4 sm:p-6 border border-slate-200">
                            <h3 class="text-lg sm:text-xl font-bold text-slate-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                                Quick Actions
                            </h3>
                            <div class="space-y-3">
                                <button class="w-full px-4 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                                    <div class="flex items-center justify-center space-x-2">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                                        </svg>
                                        <span>Download Model</span>
                                    </div>
                                </button>
                                <button class="w-full px-4 py-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold rounded-xl hover:from-green-700 hover:to-emerald-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                                    <div class="flex items-center justify-center space-x-2">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                        </svg>
                                        <span>View in AR</span>
                                    </div>
                                </button>
                                <button class="w-full px-4 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-indigo-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                                    <div class="flex items-center justify-center space-x-2">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                                        </svg>
                                        <span>Share Model</span>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Advanced Controls Section -->
                    <div class="bg-white rounded-3xl shadow-lg p-4 sm:p-6 border border-slate-200">
                        <h3 class="text-lg sm:text-xl font-bold text-slate-900 mb-4 sm:mb-6 flex items-center">
                            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-purple-600 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            Advanced Controls
                        </h3>

                        <!-- Toggle Controls -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
                            <div class="flex items-center space-x-3 p-3 sm:p-4 bg-slate-50 rounded-xl hover:bg-slate-100 transition-all duration-200 border border-slate-200 hover:border-slate-300">
                                <InputCheckbox @bind-Value="Model.EnableAr" 
                                               class="w-5 h-5 text-blue-600 border-slate-300 rounded-lg focus:ring-blue-500 focus:ring-2" 
                                               id="enableArCheck"/>
                                <label class="text-sm sm:text-base font-semibold text-slate-700" for="enableArCheck">Enable AR</label>
                            </div>
                            
                            <div class="flex items-center space-x-3 p-3 sm:p-4 bg-slate-50 rounded-xl hover:bg-slate-100 transition-all duration-200 border border-slate-200 hover:border-slate-300">
                                <InputCheckbox @bind-Value="Model.CameraControls" 
                                               class="w-5 h-5 text-blue-600 border-slate-300 rounded-lg focus:ring-blue-500 focus:ring-2" 
                                               id="cameraControlsCheck"/>
                                <label class="text-sm sm:text-base font-semibold text-slate-700" for="cameraControlsCheck">Camera Controls</label>
                            </div>
                            
                            <div class="flex items-center space-x-3 p-3 sm:p-4 bg-slate-50 rounded-xl hover:bg-slate-100 transition-all duration-200 border border-slate-200 hover:border-slate-300">
                                <InputCheckbox @bind-Value="Model.AutoRotate" 
                                               class="w-5 h-5 text-blue-600 border-slate-300 rounded-lg focus:ring-blue-500 focus:ring-2" 
                                               id="autoRotateCheck"/>
                                <label class="text-sm sm:text-base font-semibold text-slate-700" for="autoRotateCheck">Auto Rotate</label>
                            </div>
                        </div>

                        <!-- Slider Controls -->
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8">
                            <div class="space-y-3">
                                <label class="block text-sm sm:text-base font-semibold text-slate-700">Shadow Intensity</label>
                                <div class="flex items-center space-x-4">
                                    <input type="range" min="0" max="2" step="0.1" @bind="Model.ShadowIntensity" 
                                           class="flex-1 h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-gradient-to-r [&::-webkit-slider-thumb]:from-blue-600 [&::-webkit-slider-thumb]:to-purple-600 [&::-webkit-slider-thumb]:shadow-lg [&::-moz-range-thumb]:h-5 [&::-moz-range-thumb]:w-5 [&::-moz-range-thumb]:rounded-full [&::-moz-range-thumb]:bg-gradient-to-r [&::-moz-range-thumb]:from-blue-600 [&::-moz-range-thumb]:to-purple-600 [&::-moz-range-thumb]:border-0 [&::-moz-range-thumb]:shadow-lg"/>
                                    <span class="px-3 py-1.5 bg-blue-100 text-blue-800 text-sm font-semibold rounded-full min-w-[3rem] text-center border border-blue-200">
                                        @Model.ShadowIntensity
                                    </span>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <label class="block text-sm sm:text-base font-semibold text-slate-700">Shadow Softness</label>
                                <div class="flex items-center space-x-4">
                                    <input type="range" min="0" max="1" step="0.1" @bind="Model.ShadowSoftness" 
                                           class="flex-1 h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-gradient-to-r [&::-webkit-slider-thumb]:from-green-600 [&::-webkit-slider-thumb]:to-emerald-600 [&::-webkit-slider-thumb]:shadow-lg [&::-moz-range-thumb]:h-5 [&::-moz-range-thumb]:w-5 [&::-moz-range-thumb]:rounded-full [&::-moz-range-thumb]:bg-gradient-to-r [&::-moz-range-thumb]:from-green-600 [&::-moz-range-thumb]:to-emerald-600 [&::-moz-range-thumb]:border-0 [&::-moz-range-thumb]:shadow-lg"/>
                                    <span class="px-3 py-1.5 bg-green-100 text-green-800 text-sm font-semibold rounded-full min-w-[3rem] text-center border border-green-200">
                                        @Model.ShadowSoftness
                                    </span>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <label class="block text-sm sm:text-base font-semibold text-slate-700">Skybox Height</label>
                                <div class="flex items-center space-x-4">
                                    <input type="range" min="1" max="20" step="0.1" @bind="Model.SkyboxHeight" 
                                           class="flex-1 h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-gradient-to-r [&::-webkit-slider-thumb]:from-purple-600 [&::-webkit-slider-thumb]:to-indigo-600 [&::-webkit-slider-thumb]:shadow-lg [&::-moz-range-thumb]:h-5 [&::-moz-range-thumb]:w-5 [&::-moz-range-thumb]:rounded-full [&::-moz-range-thumb]:bg-gradient-to-r [&::-moz-range-thumb]:from-purple-600 [&::-moz-range-thumb]:to-indigo-600 [&::-moz-range-thumb]:border-0 [&::-moz-range-thumb]:shadow-lg"/>
                                    <span class="px-3 py-1.5 bg-purple-100 text-purple-800 text-sm font-semibold rounded-full min-w-[3rem] text-center border border-purple-200">
                                        @Model.SkyboxHeight
                                    </span>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <label class="block text-sm sm:text-base font-semibold text-slate-700">Exposure</label>
                                <div class="flex items-center space-x-4">
                                    <input type="range" min="0" max="2" step="0.1" @bind="Model.Exposure" 
                                           class="flex-1 h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:h-5 [&::-webkit-slider-thumb]:w-5 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:bg-gradient-to-r [&::-webkit-slider-thumb]:from-yellow-600 [&::-webkit-slider-thumb]:to-orange-600 [&::-webkit-slider-thumb]:shadow-lg [&::-moz-range-thumb]:h-5 [&::-moz-range-thumb]:w-5 [&::-moz-range-thumb]:rounded-full [&::-moz-range-thumb]:bg-gradient-to-r [&::-moz-range-thumb]:from-yellow-600 [&::-moz-range-thumb]:to-orange-600 [&::-moz-range-thumb]:border-0 [&::-moz-range-thumb]:shadow-lg"/>
                                    <span class="px-3 py-1.5 bg-yellow-100 text-yellow-800 text-sm font-semibold rounded-full min-w-[3rem] text-center border border-yellow-200">
                                        @Model.Exposure
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Animation Selection -->
                        @if (Options?.AnimationNames?.Count > 0)
                        {
                            <div class="mt-6 sm:mt-8 pt-4 sm:pt-6 border-t border-slate-200">
                                <label class="block text-sm sm:text-base font-semibold text-slate-700 mb-3">Animation</label>
                                <select @bind="Model.AnimationName" 
                                        class="w-full px-4 py-3 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white text-base">
                                    @foreach (var item in Options.AnimationNames)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}