<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-12">
    <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-slate-100">
        <!-- Header -->
        <div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 px-6 sm:px-8 lg:px-10 py-6 sm:py-8">
            <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 sm:w-12 sm:h-12 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                    <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white">3D Model Data Generator</h1>
            </div>
            <p class="text-blue-100 text-base sm:text-lg">Create and manage your 3D model metadata with ease</p>
        </div>

        <!-- Form -->
        <EditForm Model="_dataModelRefeModel" OnValidSubmit="HandleValidSubmit" class="p-6 sm:p-8 lg:p-10">
            <DataAnnotationsValidator/>
            <ValidationSummary class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl mb-6"/>

            <!-- Basic Information -->
            <div class="mb-8 lg:mb-10">
                <h3 class="text-lg sm:text-xl font-bold text-slate-900 mb-4 sm:mb-6 flex items-center">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Basic Information
                </h3>
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label for="name" class="block text-sm sm:text-base font-semibold text-slate-700">Name *</label>
                        <InputText id="name" 
                                   class="w-full px-4 py-3 sm:py-4 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" 
                                   @bind-Value="_dataModelRefeModel.Name.Value" 
                                   placeholder="Enter model name" 
                                   required/>
                    </div>
                    
                    <div class="flex items-center space-x-4">
                        <div class="flex items-center">
                            <InputCheckbox id="isFav" 
                                           class="w-5 h-5 text-blue-600 border-slate-300 rounded-lg focus:ring-blue-500" 
                                           @bind-Value="_dataModelRefeModel.IsFavourite"/>
                            <label class="ml-3 text-sm sm:text-base font-semibold text-slate-700" for="isFav">Mark as Favourite</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- URLs and Sources -->
            <div class="mb-8 lg:mb-10">
                <h3 class="text-lg sm:text-xl font-bold text-slate-900 mb-4 sm:mb-6 flex items-center">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                    </svg>
                    URLs and Sources
                </h3>
                
                <div class="space-y-4 sm:space-y-6">
                    <div class="space-y-2">
                        <label for="thumbnail" class="block text-sm sm:text-base font-semibold text-slate-700">Thumbnail URL *</label>
                        <InputText id="thumbnail" 
                                   class="w-full px-4 py-3 sm:py-4 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" 
                                   @bind-Value="_dataModelRefeModel.Thumbnail.Value"
                                   placeholder="https://example.com/thumbnail.jpg" 
                                   required/>
                    </div>

                    <div class="space-y-2">
                        <label for="description" class="block text-sm sm:text-base font-semibold text-slate-700">Description *</label>
                        <InputTextArea id="description" 
                                       class="w-full px-4 py-3 sm:py-4 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" 
                                       @bind-Value="_dataModelRefeModel.Description.Value"
                                       Rows="3" 
                                       placeholder="Describe your 3D model..." 
                                       required/>
                    </div>

                    <div class="space-y-2">
                        <label for="source" class="block text-sm sm:text-base font-semibold text-slate-700">GLB Source URL *</label>
                        <InputText id="source" 
                                   class="w-full px-4 py-3 sm:py-4 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" 
                                   @bind-Value="_dataModelRefeModel.Source.Value"
                                   placeholder="https://example.com/model.glb" 
                                   required/>
                    </div>

                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
                        <div class="space-y-2">
                            <label for="poster" class="block text-sm sm:text-base font-semibold text-slate-700">Poster *</label>
                            <InputText id="poster" 
                                       class="w-full px-4 py-3 sm:py-4 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" 
                                       @bind-Value="_dataModelRefeModel.Poster.Value"
                                       placeholder="Poster filename or URL" 
                                       required/>
                        </div>
                        
                        <div class="space-y-2">
                            <label for="altText" class="block text-sm sm:text-base font-semibold text-slate-700">Alt Text *</label>
                            <InputText id="altText" 
                                       class="w-full px-4 py-3 sm:py-4 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" 
                                       @bind-Value="_dataModelRefeModel.AltText.Value"
                                       placeholder="Alternative text for accessibility" 
                                       required/>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label for="iosSrc" class="block text-sm sm:text-base font-semibold text-slate-700">iOS Source *</label>
                        <InputText id="iosSrc" 
                                   class="w-full px-4 py-3 sm:py-4 border border-slate-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-base" 
                                   @bind-Value="_dataModelRefeModel.IosSrc.Value"
                                   placeholder="https://example.com/ios-model.usdz" 
                                   required/>
                    </div>
                </div>
            </div>

            <!-- Advanced Settings -->
            <div class="mb-8 lg:mb-10">
                <h3 class="text-lg sm:text-xl font-bold text-slate-900 mb-4 sm:mb-6 flex items-center">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-purple-600 mr-2 sm:mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Advanced Settings
                </h3>
                
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6">
                    <!-- Animation Names -->
                    <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-4 sm:p-6 border border-blue-200">
                        <div class="flex items-center mb-4">
                            <div class="w-8 h-8 bg-blue-600 rounded-xl flex items-center justify-center mr-3">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <h4 class="text-lg font-bold text-blue-900">Animation Names</h4>
                        </div>
                        
                        <div class="space-y-3">
                            @foreach (var animation in _dataModelRefeModel.AnimationNames)
                            {
                                <div class="flex space-x-2">
                                    <InputText class="flex-1 px-3 py-2 border border-blue-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm" 
                                               @bind-Value="animation.Value" 
                                               placeholder="Animation name"/>
                                    <button type="button" 
                                            class="px-3 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-200 flex items-center justify-center hover:scale-105"
                                            @onclick="() => RemoveAnimation(animation)">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                            }
                            <button type="button" 
                                    class="w-full px-4 py-2.5 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-all duration-200 flex items-center justify-center space-x-2 font-semibold hover:scale-105"
                                    @onclick="AddAnimation">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                </svg>
                                <span>Add Animation</span>
                            </button>
                        </div>
                    </div>

                    <!-- Environment Images -->
                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-4 sm:p-6 border border-green-200">
                        <div class="flex items-center mb-4">
                            <div class="w-8 h-8 bg-green-600 rounded-xl flex items-center justify-center mr-3">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                            <h4 class="text-lg font-bold text-green-900">Environment Images</h4>
                        </div>
                        
                        <div class="space-y-3">
                            @foreach (var env in _dataModelRefeModel.EnvironmentImages)
                            {
                                <div class="flex space-x-2">
                                    <InputText class="flex-1 px-3 py-2 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent text-sm" 
                                               @bind-Value="env.Value" 
                                               placeholder="Image URL"/>
                                    <button type="button" 
                                            class="px-3 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-200 flex items-center justify-center hover:scale-105"
                                            @onclick="() => RemoveEnvironment(env)">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                            }
                            <button type="button" 
                                    class="w-full px-4 py-2.5 bg-green-600 text-white rounded-xl hover:bg-green-700 transition-all duration-200 flex items-center justify-center space-x-2 font-semibold hover:scale-105"
                                    @onclick="AddEnvironment">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                </svg>
                                <span>Add Environment</span>
                            </button>
                        </div>
                    </div>

                    <!-- Skybox Images -->
                    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-2xl p-4 sm:p-6 border border-indigo-200">
                        <div class="flex items-center mb-4">
                            <div class="w-8 h-8 bg-indigo-600 rounded-xl flex items-center justify-center mr-3">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <h4 class="text-lg font-bold text-indigo-900">Skybox Images</h4>
                        </div>
                        
                        <div class="space-y-3">
                            @foreach (var skybox in _dataModelRefeModel.SkyboxImages)
                            {
                                <div class="flex space-x-2">
                                    <InputText class="flex-1 px-3 py-2 border border-indigo-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-sm" 
                                               @bind-Value="skybox.Value" 
                                               placeholder="Skybox URL"/>
                                    <button type="button" 
                                            class="px-3 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-200 flex items-center justify-center hover:scale-105"
                                            @onclick="() => RemoveSkybox(skybox)">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                            }
                            <button type="button" 
                                    class="w-full px-4 py-2.5 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition-all duration-200 flex items-center justify-center space-x-2 font-semibold hover:scale-105"
                                    @onclick="AddSkybox">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                                </svg>
                                <span>Add Skybox</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button class="px-8 py-4 sm:py-5 bg-gradient-to-r from-green-600 via-emerald-600 to-teal-600 text-white text-lg sm:text-xl font-bold rounded-2xl hover:from-green-700 hover:via-emerald-700 hover:to-teal-700 transform hover:-translate-y-1 transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105" 
                        type="submit">
                    <div class="flex items-center justify-center space-x-2">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Generate and Copy</span>
                    </div>
                </button>
            </div>
        </EditForm>
    </div>
</div>

<!-- JSON Modal -->
@if (_isJsonModalVisible)
{
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
         @onclick="CloseJsonModal">
        
        <!-- Popup Content -->
        <div class="relative w-full max-w-4xl max-h-[80vh] bg-white rounded-3xl shadow-2xl overflow-hidden transform transition-all duration-300 scale-100 opacity-100"
             @onclick:stopPropagation="true">
            
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 text-white px-6 sm:px-8 py-6 sm:py-8">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 sm:w-12 sm:h-12 bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
                            <svg class="w-6 h-6 sm:w-7 sm:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-2xl sm:text-3xl font-bold">Serialized Data</h2>
                            <p class="text-blue-100 text-sm sm:text-base">Copy the generated JSON data</p>
                        </div>
                    </div>
                    
                    <!-- Close Button -->
                    <button @onclick="CloseJsonModal" 
                            class="p-3 bg-white/20 hover:bg-white/30 rounded-xl transition-all duration-200 hover:scale-110 group">
                        <svg class="w-6 h-6 text-white group-hover:text-red-200 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            <!-- Body -->
            <div class="p-6 sm:p-8">
                <div class="bg-slate-100 rounded-2xl p-4 sm:p-6 overflow-auto max-h-96">
                    <pre class="text-sm text-slate-800 whitespace-pre-wrap"><code>@_deserializedJson</code></pre>
                </div>
                
                <!-- Copy Button -->
                <div class="mt-6 sm:mt-8 flex justify-center">
                    <button @onclick="CopyToClipboard" 
                            class="px-8 py-3 sm:py-4 bg-gradient-to-r from-green-600 via-emerald-600 to-teal-600 text-white font-bold rounded-2xl hover:from-green-700 hover:via-emerald-700 hover:to-teal-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1 hover:scale-105">
                        <div class="flex items-center space-x-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                            </svg>
                            <span>Copy to Clipboard</span>
                        </div>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<script>
    window.copyToClipboard = async function (text) {
        try {
            await navigator.clipboard.writeText(text);
            return true;
        } catch (err) {
            console.error('Failed to copy text: ', err);
            return false;
        }
    };
</script>