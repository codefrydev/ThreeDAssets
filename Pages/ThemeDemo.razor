            <h2 class="text-3xl font-bold text-theme-primary mb-6">üìù Form Elements</h2>
            <div class="max-w-md space-y-4">
                <div>
                    <label class="block text-theme-primary font-medium mb-2">Email Address</label>
                    <input type="email"
                           class="w-full px-4 py-3 bg-theme-secondary border border-theme-primary rounded-xl text-theme-primary placeholder-theme-muted focus:outline-none focus:ring-2 focus:ring-theme-accent focus:border-transparent transition-all duration-200"
                           placeholder="Enter your email">
                </div>
                <div>
                    <label class="block text-theme-primary font-medium mb-2">Message</label>
                    <textarea rows="4"
                              class="w-full px-4 py-3 bg-theme-secondary border border-theme-primary rounded-xl text-theme-primary placeholder-theme-muted focus:outline-none focus:ring-2 focus:ring-theme-accent focus:border-transparent transition-all duration-200"
                              placeholder="Type your message here..."></textarea>
                </div>
            </div>
        </div>

        <!-- Navigation Demo -->
        <div class="bg-theme-primary rounded-xl shadow-theme-xl border border-theme-primary p-8">
            <h2 class="text-3xl font-bold text-theme-primary mb-6">üß≠ Navigation</h2>
            <nav class="flex flex-wrap gap-4">
