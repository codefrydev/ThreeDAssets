@code
{
    private void FavouriteClicked()
    {
        Helper.IsFavouriteClicked = !Helper.IsFavouriteClicked;
        StateHasChanged();
    }

    private string IsActive(string name)
    {
        if (name == "All")
        {
            return !Helper.IsFavouriteClicked ? "active" : string.Empty;
        }

        return Helper.IsFavouriteClicked ? "active" : string.Empty;
    }
}
