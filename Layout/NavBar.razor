@using ThreeDAssets.Utility

<nav class="fixed top-0 left-0 right-0 z-50 bg-theme-primary border-b border-theme-primary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-14 lg:h-16">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2.5 shrink-0">
                <div class="cartoon-card w-9 h-9 bg-theme-accent flex items-center justify-center">
                    <span class="text-on-accent font-semibold text-sm">CFD</span>
                </div>
                <span class="hidden sm:inline text-theme-primary font-semibold text-lg">3D Assets</span>
            </a>

            <!-- Center: Search (desktop) -->
            <div class="hidden lg:flex flex-1 justify-center max-w-sm mx-6">
                <input type="search"
                       placeholder="Search models..."
                       value="@Helper.SearchQuery"
                       @oninput="OnSearchInput"
                       class="w-full px-3 py-2 text-sm bg-theme-secondary border border-theme-primary rounded-lg text-theme-primary placeholder-theme-muted focus:outline-none focus:ring-2 focus:ring-theme-accent focus:border-transparent" />
            </div>

            <!-- Right: Nav links (desktop) -->
            <div class="hidden lg:flex items-center gap-1">
                <a href="/" class="nav-link @(GetCurrentPath() == "/" && !Helper.IsFavouriteClicked ? "nav-link-active" : "")">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
                    <span>Models</span>
                </a>
                <button type="button" @onclick="FavouriteClicked"
                        class="@(Helper.IsFavouriteClicked ? "nav-link nav-link-active" : "nav-link")">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                    <span>Favourites</span>
                </button>
                <a href="/DataGen" class="nav-link @(GetCurrentPath().Contains("/DataGen") ? "nav-link-active" : "")">Data Gen</a>
                <a href="/docs" class="nav-link @(GetCurrentPath().Contains("/docs") ? "nav-link-active" : "")">Docs</a>
                <span class="w-px h-5 bg-theme-primary mx-1" aria-hidden="true"></span>
                <a href="https://codefrydev.in" target="_blank" rel="noopener" class="nav-link nav-link-external">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                    <span>Code Fry Dev</span>
                </a>
            </div>

            <!-- Right: Theme + mobile menu -->
            <div class="flex items-center gap-2">
                <ThemeToggle />
                <button type="button" class="lg:hidden p-2 rounded-lg text-theme-secondary hover:text-theme-primary hover:bg-theme-secondary transition-colors"
                        aria-label="Open menu"
                        @onclick="ToggleMobileMenu">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    @if (_isMobileMenuOpen)
    {
        <div class="lg:hidden border-t border-theme-primary bg-theme-primary">
            <div class="px-4 py-4 space-y-1">
                <input type="search"
                       placeholder="Search models..."
                       value="@Helper.SearchQuery"
                       @oninput="OnSearchInput"
                       class="w-full px-3 py-2.5 text-sm bg-theme-secondary border border-theme-primary rounded-lg text-theme-primary placeholder-theme-muted focus:outline-none focus:ring-2 focus:ring-theme-accent mb-3" />
                <a href="/" class="mobile-nav-link @(GetCurrentPath() == "/" && !Helper.IsFavouriteClicked ? "mobile-nav-link-active" : "")" @onclick="CloseMobileMenu">
                    <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
                    <span>Models</span>
                </a>
                <button type="button" @onclick="FavouriteClicked" class="mobile-nav-link w-full text-left @(Helper.IsFavouriteClicked ? "mobile-nav-link-active" : "")">
                    <svg class="w-5 h-5 shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                    <span>Favourites</span>
                </button>
                <a href="/DataGen" class="mobile-nav-link @(GetCurrentPath().Contains("/DataGen") ? "mobile-nav-link-active" : "")" @onclick="CloseMobileMenu">Data Gen</a>
                <a href="/docs" class="mobile-nav-link @(GetCurrentPath().Contains("/docs") ? "mobile-nav-link-active" : "")" @onclick="CloseMobileMenu">Docs</a>
                <a href="https://codefrydev.in" target="_blank" rel="noopener" class="mobile-nav-link" @onclick="CloseMobileMenu">
                    <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                    <span>Code Fry Dev</span>
                </a>
            </div>
        </div>
    }
</nav>

<style>
    .nav-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-secondary);
        text-decoration: none;
        border-radius: 0.5rem;
        transition: color 0.15s, background-color 0.15s;
    }
    .nav-link:hover {
        color: var(--text-primary);
        background-color: var(--bg-secondary);
    }
    .nav-link.active, .nav-link-active {
        color: var(--accent);
        background-color: var(--bg-secondary);
    }
    .nav-link-external:hover {
        color: var(--accent);
    }
    .mobile-nav-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 0.5rem;
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-secondary);
        text-decoration: none;
        border-radius: 0.5rem;
        transition: color 0.15s, background-color 0.15s;
    }
    .mobile-nav-link:hover, .mobile-nav-link-active {
        color: var(--accent);
        background-color: var(--bg-secondary);
    }
</style>

@code
{
    [Inject] private NavigationManager? NavigationManager { get; set; }

    private bool _isMobileMenuOpen;

    private string GetCurrentPath()
    {
        if (NavigationManager == null) return "/";
        var path = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        return string.IsNullOrEmpty(path) ? "/" : "/" + path.TrimStart('/');
    }

    private void FavouriteClicked()
    {
        Helper.IsFavouriteClicked = !Helper.IsFavouriteClicked;
        _isMobileMenuOpen = false;
        StateHasChanged();
    }

    private void ToggleMobileMenu()
    {
        _isMobileMenuOpen = !_isMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        _isMobileMenuOpen = false;
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        Helper.SearchQuery = e.Value?.ToString() ?? "";
        StateHasChanged();
    }
}
